@model List<TopMatchViewModel>

<h2 class="mb-4">Top Matches</h2>

<style>
    .table th, .table td {
        padding: 1rem;
        margin:10px;
        vertical-align: middle;
    }

    .apply-btn {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        background-color: #007bff;
        color: white;
        border: none;
        text-decoration: none;
    }

    .apply-btn:hover {
        background-color: #0056b3;
        color: white;
    }
</style>
<div class="container">
    <div class="row">
    <div class="col-9">
        <table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Skills</th>
            <th>Duration (weeks)</th>
            <th>Start Rate</th>
            <th>Similarity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.Title</td>
                <td> @match.Description?.Substring(0, Math.Min(50, match.Description.Length))...
                    <a href="/Jobs/Details/" class="view-more">View More</a></td>
                <td>@match.Skills</td>
                   <td>@string.Join(", ", match.Duration)</td>
                <td>@match.StartRate</td>
                <td>@match.Similarity%</td>
                <td>
                    <a class="apply-btn" href="/Jobs/Apply/">Apply</a>
                </td>
            </tr>
        }
    </tbody>
</table>

    </div>
    </div>

</div>
